<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dynamicdrillers.sih2018user.ComplaintSuccessFullyActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:translationZ="30dp"
        android:elevation="100dp">

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1."
                android:src="@drawable/successicon"
                android:padding="7dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="Thank You !"
                android:gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:padding="7dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="Your Complaint Has Been Succesfuly\n Posted"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/complaintid_success_textview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:padding="7dp"
                android:text="ID :"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/back_to_home"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:textColor="@android:color/white"
                android:text="Back To Home"
                android:background="@drawable/back_to_home"
                android:textSize="20sp"
                android:gravity="center"
                android:padding="7dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"/>



        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
